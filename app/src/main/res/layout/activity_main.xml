<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffd919"
    tools:context=".MainActivity">


        <RelativeLayout
            android:id="@+id/magicRelativeLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="36dp">

            <ImageView
                android:id="@+id/answerImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:contentDescription="@string/background_circle"
                app:srcCompat="@drawable/blueellipse" />

            <TextView
                android:id="@+id/answerTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:gravity="center_horizontal"
                android:text="@string/click_to_get_advice"
                android:textColor="#ffffff"
                android:textSize="24sp" />

        </RelativeLayout>

</RelativeLayout>